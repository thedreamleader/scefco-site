---
import Main from "../layouts/main.astro";
import Footer from "../components/footer.astro";
import Logo_SC from '../images/logo/Scefco_White.png'
import Trailer from "../images/titles/teaser.png"
import OsisLogo from "../images/logo/Osis.png"
import SCLogo from "../images/logo/SCShades.png"
import Nav from "../components/betternav.astro";
import Section from "../components/section.astro";
import LombaCarousel from "../components/lomba-carousel.astro";
import { Image } from "astro:assets";
import LogoScefcoAlt from "../images/titles/scefcologo_wow.png";
import "../styles/style.css";
import { defineConfig, passthroughImageService } from "astro/config";
---

<Main>
    <Nav id="nav" />
    <div id="navBlock">
    </div>
    </Section>
    <Section id="section-countdown">
        <Image class="hoverPop" id="LogoScefco" src={LogoScefcoAlt} alt="SCEFCO LOGO"></Image>
        <h1 class="announce">SEE YOU</h1>
        <div id="timer" class="hoverPop">
            <h1 class="countdownText" id="days"></h1>
            <h1 class="countdownDot">:</h1>
            <h1 class="countdownText" id="hours"></h1>
            <h1 class="countdownDot">:</h1>
            <h1 class="countdownText" id="minutes"></h1>
            <h1 class="countdownDot">:</h1>
            <h1 class="countdownText" id="seconds"></h1>
        </div>
        <!-- <h1 class="countdownText" id="countdown"></h1> -->
    </Section>
    <Section id="section-lomba" class="section-lomba">
        <LombaCarousel />
    </Section>
    <Section id="section-tentang-trailer">
    <Section id="section-trailer">
        <Image class="hoverPop" id="trailer-title" src={Trailer} alt="trailer"></Image>
        <div id="trailer-main" class="trailer-section">
            <iframe class="trailer-section" id="trailer-video" src="https://www.youtube.com/embed/4D9SFh930-w" title="SCEFCO 2025 | OFFICIAL TEASER" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
        </div>
    </Section>
    <Section id="section-tentang">
        <div id="tentang-main">
        <div id="tentang-main-text">
            <h2 id="tentang-title" class="tentang">Tentang SCEFCO</h2>
            <p id="tentang-paragraph" class="tentang">
                Awaken your element, unleash your potential, with SCEFCO 2025!
            </p>
        </div>
        </div>
        </div>
        <div id="tentang-photo">
            <img src={Logo_SC.src} alt="LOGO SC" id="sc-pic" class="tentang hoverPop">
        </div>
    </Section>
    </Section>
    <Footer class="Footer">
        <div class="footer-main">
        <div class="Footer-Section" id="footer-contact">
            <h5 class="footer-text hoverPop bg-white">Contact</h5>
            <h6 class="footer-text footer-contact footer-links bg-white">+62 858-9148-5172 (Naffila)</h6>
            <h6 class="footer-text footer-contact footer-links bg-white">+62 856-9169-5071 (Raya)</h6>
        </div>
       <div class="Footer-Section hoverPop" id="footer-follow">
            <h5 class="footer-text bg-white">Follow US</h2>
            <a  class="footer-text footer-links bg-white instagram" target="_blank" href="https://www.instagram.com/scefco.official/">@scefco.official</a>
       </div>
       <div class="Footer-Section hoverPop" id="footer-location">
            <h5 class="footer-text bg-white">Location</h2>
            <iframe class="bg-white" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3965.6311350591945!2d106.68962817589214!3d-6.312092861772339!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e69e5c08501f243%3A0x1fc2d531dc7b43a4!2sSMA%20ISLAM%20SINAR%20CENDEKIA!5e0!3m2!1sen!2sid!4v1723902494319!5m2!1sen!2sid" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
       </div>
        </div>
        <div class="footer-secondary"> 
            <Image class="hoverPop" class="credit_logo" id="sc_shades" src={OsisLogo} alt="trailer"></Image>
            <Image class="hoverPop" class="credit_logo" id="osis_logo" src={SCLogo} alt="trailer"></Image>
        </div>
        <div class="footer-trinary">
            <p>Â© SCEFCO 2025</p>
        </div>
        
    </Footer>
   

    <!-- Original src by nvll-zen https://github.com/nvll-zen, currently maintained by thedreamleader https://github.com/thedreamleader, created using Astro jS -->
    <script src="../scripts/countdown.js"></script>
</Main>
